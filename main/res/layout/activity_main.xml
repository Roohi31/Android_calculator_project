<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/fieldContainer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:background="@drawable/edit_text_background"
        >

        <EditText
            android:id="@+id/inputTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="65sp"
            android:gravity="end"
            android:background="@drawable/edit_text_background"
            android:focusable="false"
            android:inputType="none"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/outputTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="45sp"
            android:focusable="false"
            android:inputType="none"
            android:gravity="end"
            android:textStyle="bold"
            android:textColor="#626060"
            android:background="@drawable/edit_text_background"

            />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/fieldContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        android:stretchColumns="*"
        android:shrinkColumns="*"
        android:layout_margin="5dp">

        <TableRow
            android:layout_weight="1"
            android:gravity="center"
            >
            <Button
                android:text="C"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:insetRight="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:backgroundTint="#75B5CE"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:onClick="buttonClicked"
                />
            <Button
                android:text="D"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:insetRight="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:backgroundTint="#75B5CE"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:onClick="buttonClicked"

                />
            <Button
                android:text="%"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:insetRight="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:backgroundTint="#75B5CE"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:onClick="buttonClicked"
                />
            <Button
                android:text="/"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:insetRight="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:backgroundTint="#EF673C"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:onClick="buttonClicked"
                />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center"
            >
            <Button
                android:text="7"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:insetRight="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:backgroundTint="#2D5362"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:onClick="buttonClicked"
                />
            <Button
                android:text="8"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:insetRight="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:backgroundTint="#2D5362"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:onClick="buttonClicked"
                />
            <Button
                android:text="9"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:insetRight="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:backgroundTint="#2D5362"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:onClick="buttonClicked"
                />
            <Button
                android:text="X"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:insetRight="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:backgroundTint="#EF673C"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:onClick="buttonClicked"
                />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center"
            >
            <Button
                android:text="4"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:insetRight="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:backgroundTint="#2D5362"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:onClick="buttonClicked"
                />
            <Button
                android:text="5"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:insetRight="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:backgroundTint="#2D5362"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:onClick="buttonClicked"
                />
            <Button
                android:text="6"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:insetRight="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:backgroundTint="#2D5362"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:onClick="buttonClicked"
                />
            <Button
                android:text="-"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:insetRight="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:backgroundTint="#EF673C"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:onClick="buttonClicked"
                />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:text="1"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:insetRight="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:backgroundTint="#2D5362"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:onClick="buttonClicked"
                />
            <Button
                android:text="2"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:insetRight="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:backgroundTint="#2D5362"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:onClick="buttonClicked"
                />
            <Button
                android:text="3"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:insetRight="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:backgroundTint="#2D5362"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:onClick="buttonClicked"
                />
            <Button android:text="+"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:insetRight="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:backgroundTint="#EF673C"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:onClick="buttonClicked"
                />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center"
            >
            <Button
                android:text="0"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:insetRight="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:backgroundTint="#2D5362"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_span="2"
                android:onClick="buttonClicked"
                />
            <Button
                android:text="."
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:insetRight="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:backgroundTint="#2D5362"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:onClick="buttonClicked"
                />

            <Button
                android:text="="
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:insetRight="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:backgroundTint="#EF673C"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:onClick="buttonClicked"
                />
        </TableRow>


    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>